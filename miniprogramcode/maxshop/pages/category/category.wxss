.max-flex-wrap{
    display: flex;
}
.right-content{
    background-color: #ffffff;
    height: 500px;
    width: 90%;
    font-size: 12px;
    color: #c1c1c1;
    column-count:3;
    -moz-column-count:3; /* Firefox */
    -webkit-column-count:3; /* Safari å’Œ Chrome */
    column-gap: 0.5em;
    -moz-column-gap: 0.5em;
    -webkit-column-gap: 0.5em;
    margin:2em auto;
}
.right-item{
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    justify-content: center;
}
.right-item image{
    width: 75%;
    height: 26%;
}
.right-item text{
    margin-top: 10px;
    text-align: center;
    font-size:12px;
}
.right-content .right-content-item{
    margin-bottom: 0.5em;
    -moz-page-break-inside: avoid;
    -webkit-column-break-inside: avoid;
    break-inside: avoid;
    background:white ;
}
