page{
    background-color: rgb(235, 235, 235);
}
.order-item{
    width: 100%;
    margin-top: 10px;
    background-color: rgb(250, 250, 250);
}
.item-status{
    text-align: right;
    padding-right: 10px;
    font-size: 14px;
}
.item-date{
    padding-left: 10px;
    font-size: 10px;
    color:#ccc;
}
.item-title{
    height: 40px;
    line-height: 40px;
}
.item-content{
    display: flex;
    height: 60px;
    align-items: center;
    margin-top: 5px;
    background-color: rgb(235, 235, 235);
}
.product-img{
    flex: 2;
    width: 75%;
    height: 100%;
    margin:5px 5px;
    text-align: center;
}

.product-name{
    flex: 5;
    width: 90%;
    font-size: 12px;
    color: rgb(45, 45, 45);
}
.product-count{
    flex: 1;
}
.product-price{
    flex: 2;
    font-size: 14px;
    color: rgb(45, 45, 45);
}
.item-detail{
    height: 40px;
}
.item-total{
    display: flex;
    height: 35px;
    align-items: center;
    margin-top: 5px;
    background-color: rgb(235, 235, 235);
}
.total-count{
    flex: 1;
    font-size: 12px;
    color: rgb(30, 30, 30);
}
.total-price{
    flex: 2;
    font-size: 14px;
    font-size: 12px;
    color: rgb(30, 30, 30);
}
.item-bottom-wrap{
    display: flex;
    height: 35px;
    align-items: center;
    justify-content: flex-end;
    margin-top: 5px;
    background-color: rgb(250, 250, 250);
}
.item-bottom-wrap view{
    font-size: 12px;
    color: #ccc;
}
.item-bottom-wrap button{
    height: 25px;
    margin: 5px 5px;
    font-size: 14px;
    color: #c6c6c6;
}
