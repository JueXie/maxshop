page{
  height: 100%;
}
.titlewrap{
  background-image: url('http://maxshop.natapp1.cc/images/bg.jpg');
  background-size: 100% 100%;
  -moz-background-size:100% 100%;
}

.title{
  line-height: 72px;
  margin-left: 10%;
  color: white;
  font-weight: bolder;
}

.topbar{
  width: 100%;
  height: 54px;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
}
.left-topbar{
  width: 30%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right-topbar{
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
}

.btn-search{
  background-color: #e5e5e5;
  width: 80%;
  height: 27px;
  border-radius: 13px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-index{
  font-size: small;
}

.scroll-view_H{
  width: 100%;
  height:100%;
  overflow: auto hidden;
  white-space: nowrap;
}
::-webkit-scrollbar{
  height: 0;
  width: 0;
}
.scroll-view-item_H{
  display: inline-block;
  width: 30%;
  height: 100%;
}

.item{
  position: relative;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.active{
  color: #e72f23;
}
.active::after{
  content: ''; 
  position: absolute;
  left: auto;
  bottom: 10px;
  width: 25px;
  height: 2px;
  background-color: #e72f23;
}

.swiper-wrap{
  width: 100%;
}

.swiper-item{
  width: 100%;
  height: 100%;
}

.content-wrap{
  width: 100%;
  background-color: #f2f2f2;
}

.content-head{
  height: 46px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head-text-1{
  margin-left: 10px;
  font-size: 20px;
  font-weight: bold;
}

.head-text-2{
  margin-left: 10px;
  font-size: 10px;
  color: #979797;
}

.head-text-3{
  margin-left: 5px;
  font-size: 10px;
  color: #979797;
}

.show-more{
  margin-right: 10px;
  font-size: 16px;
}

.content{
  width: 95%;
  margin: 0 auto;
}

.addButton{
  font-size: 26rpx;
  background-color: #f2f2f2;
  padding: 5px;
  border-radius: 5px;
}
