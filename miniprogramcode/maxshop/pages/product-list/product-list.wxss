page{
    width: 100%;
    height: 100%;
}
.max-item{
    width: 100%;
    height: 240px;
    display: flex;
    flex-direction: column;
}

.max-item .max-item-img{
    width: 100%;
}

.max-item .max-item-content{

}
.max-item-title{
    margin: 4rpx 12rpx 0;
    font: 26rpx/38rpx PingFangSC-regular;
    color: rgba(0, 0, 0, 0.8);
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.mini-line{
    height: 10px;
    width: 100%;
    background-color: #fff;
}

.tip-wrapper{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}